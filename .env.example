# Django Settings
# Note: If SECRET_KEY contains $ characters, escape them with $$ or generate a new key without $
SECRET_KEY='your-secret-key-here-change-in-production'
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Neon PostgreSQL)
DATABASE_URL=
# Redis Configuration
# ====================
# For LOCAL development with Docker:
#   REDIS_URL=redis://redis:6379/0
#
# For RAILWAY deployment (use Private Network URL):
#   In Railway Variables, set: REDIS_URL=${{Redis.REDIS_URL}}
#   This will resolve to: redis://default:PASSWORD@redis.railway.internal:6379
#
# IMPORTANT: Do NOT use redis.railway.app (public) - it will timeout!
#            Always use redis.railway.internal (private network)
REDIS_URL=redis://localhost:6379/0

# AWS Credentials
AWS_ACCESS_KEY_ID='your-aws-access-key'
AWS_SECRET_ACCESS_KEY='your-aws-secret-key'
AWS_BEDROCK_REGION='us-east-1'
AWS_S3_BUCKET_NAME='ficct-elasticbot-bucket'
AWS_S3_REGION_NAME='us-east-1'
AWS_SES_REGION_NAME='us-east-1'
USE_S3=True
USE_SES=True
DEFAULT_FROM_EMAIL='dev@ficct.com'

# CORS Configuration
CORS_ALLOWED_ORIGINS='http://localhost:5173,https://elasticbot.ficct.com'

# Celery Configuration
# ====================
# For RAILWAY: Set these in Railway Variables (not here):
#   CELERY_BROKER_URL=${REDIS_URL}/0
#   CELERY_RESULT_BACKEND=django-db
#
# For LOCAL development:
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# External APIs
BINANCE_P2P_API_URL=
BINANCE_API_TIMEOUT=10
BINANCE_MAX_RETRIES=3

# External OHLC API for Historical Data Import

# Only set this if you need to import historical data.
# Use the import command sparingly: python manage.py import_ohlc_history --confirm
# After initial import, remove or comment out this variable to prevent accidental calls.
# EXTERNAL_OHLC_API_URL='https://your-api-endpoint.amazonaws.com/prod/ohlc'

# Application Settings
ELASTICITY_CALCULATION_TIMEOUT=300
MAX_DATA_RETENTION_DAYS=90
CACHE_TTL_SECONDS=900

# Rate Limiting (set to False for testing/demos)
RATE_LIMITING_ENABLED=True
